{
  "name": "@peter.naydenov/walk",
  "description": "Deep copy with fine control during the process. Can be used also as a deep forEach function",
  "version": "5.0.1",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./src/main.js",
  "type": "module",
  "types": "./types/main.d.ts",
  "exports": {
    ".": {
      "import": "./src/main.js",
      "require": "./dist/walk.cjs",
      "default": "./src/main.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "scripts": {
    "test": "mocha test",
    "cover": "c8 mocha test",
    "build": "rollup -c",
    "postbuild": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterNaydenov/walk.git"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^10.1.3",
    "chai": "5.2.0",
    "mocha": "11.1.0",
    "rollup": "^4.34.9",
    "typescript": "^5.8.2"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test",
      "test-data"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "browserslist": "> 2%, not dead"
}
